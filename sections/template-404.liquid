
<div class="e404">
<div class="continar">
  <h1 class="h1">404</h1>
  <h1>{{ section.settings.error_text }}</h1>
    <a href="{{ routes.root_url }}">{{ section.settings.btn_text }}</a>
</div>
</div>






<style>
  *{
    margin: 0;
    box-sizing: border-box;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  }
  .e404{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80%;
    
    
  }
  .continar{
    display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 30px;
  }
  .h1{
    font-weight: bold;
    font-size: 50px;
    color:black !important;
  }
   .continar h1{
    color: #3F000F;
      
   }
   .continar a{
    
    text-decoration: none;
    background-color: #3F000F;
    color: #fff;
    padding: 12px 15px;
    border: 1px solid #fff;
    border-radius: 15px;
    cursor: pointer;

   }

   @media screen and (max-width: 600px) {
    .continar h1{
     font-size: 20px;
      
   }
   .h1{
    font-weight: bold;
    font-size: 50px !important;
    color:black !important;
  }
   }
   @media screen and (max-width: 450px) {
    .h1{
    font-weight: bold;
    font-size: 50px !important;
    color:black !important;
  }
    .continar h1{
     font-size: 15px;
      
   }
   }

   @media screen and (max-width: 300px) {
    .h1{
    font-weight: bold;
    font-size: 50px !important;
    color:black !important;
  }
    .continar a{
    
    text-decoration: none;
    background-color: #3F000F;
    color: #fff;
    padding: 8px 12px;
    border: 1px solid #fff;
    border-radius: 15px;
    cursor: pointer;
     font-size: 15px;
   }
   }
</style>




  {% schema %}
  {
    "name": "404_template",
    "settings": [
         {
          "type": "text",
          "id": "error_text",
          "default": "Ops the page you looking for is not exist !",
          "label": "text for 404 error"
         },
         {
          "type": "text",
          "id": "btn_text",
          "label": "an text for the button",
          "default": "Back To Home Page"
         }
      ]
  }
  {% endschema %}
