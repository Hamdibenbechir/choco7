

<div class="raper">

  <div class="contact-img-our">
    <img src="{{ "contactimg.png" | asset_url }}" alt="">
  </div>


 
 
   

  <div class="rap">
   {% form 'contact' %}
      <h1 class="contact-title">Contact Us</h1>

       <div class="errors"><h3 class="contact-errors">{{ form.errors | default_errors }}</h3></div>
       


      <div class="first-name">
        <label for="contact_name">User name</label>
        <input type="text" name="contact[name]" id="contact_name" placeholder="User Name"/>
      </div>



      

      <div class="email">
        <label for="contact_email">Email</label>
        <input type="email" name="contact[email]" id="contact_email" placeholder="Etc@Etc.com" />
      </div>



      <div class="message">
         <label for="contact_message">Message</label>
          <textarea name="contact[body]" id="contact_message" placeholder="Your Message"></textarea>
      </div>



       <div class="submit">
          <input id="submit" type="submit" value="Contact Us!" />
     </div>



   {% endform %}
  </div>
    
  

</div>

