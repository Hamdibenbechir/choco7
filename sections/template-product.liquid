<div class="product-page">
  <div class="pro-card">

      
        <img src="{{ product.featured_image | img_url: "master"}}" alt="">
      
   <div class="pro-info">
      {% form 'product', product %}
          <h1>{{ product.title }}</h1>


          <p>{{ product.vendor }}</p>


          <!-- Start of Judge.me code -->
          <div class='jdgm-widget jdgm-preview-badge' data-id='{{ product.id }}'>
            {{ product.metafields.judgeme.badge }}
          </div>


          <!-- End of Judge.me code -->

          <h2 id="product-price">{{ product.selected_or_first_available_variant.price | money }}</h2>


          <p>{{ product.description }}</p>


          {% unless product.has_only_default_variant %}


          <div data-url="{{ product.url }}" data-section="{{ section.id }}">

              <select  id="variant-select">

                {% for variant in product.variants %}

                  <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}
                    selected
                  {% endif %}
                  data-price="{{ variant.price | money }}"
                  
                  >

                    {{ variant.title }}

                  </option>

                {% endfor %}

              </select>

          </div>

          {% endunless %}

          
        <div class="quantity-content">
          <p class="p-quan">Quantity</p>
          <div class="quantity">
            <button class="qbtn" id="qbtn1">+</button>
            <input class="quantity-input" type="number" name="quantity" id="Quantity" value="1" min="1">
            <button class="qbtn"  id="qbtn2">-</button>
          </div>
        </div>
          
        
          <div>

          <button type="submit" name="add" {% if product.selected_or_first_available_variant== false %} disabled {% endif %}
            class="check-out">

          {% if product.selected_or_first_available_variant.available == false %}

            Solde Out
          {% else %}

            Add To Cart
          {% endif %}

          </button>
  
        </div>

      {% endform %}
      <button class="build-box">Build Your Chocolate box</button>
    </div>
  </div>
   <div class="builds">
     {% render "builder" %}
   </div>

    <div class="also-like">
      <h1>You may also like</h1>
      <div class="also-pro">
         {% for product in collections['you-may-also-like'].products %}
           {% render 'product', product: product %}
         {% endfor %}
      </div>
    </div>


  <!-- Start of Judge.me code -->
  <div style='clear:both'></div>
  <div id='judgeme_product_reviews' class='jdgm-widget jdgm-review-widget'
    data-product-title='{{ product.title | escape }}' data-id='{{ product.id }}' data-auto-install='false'>{{
    product.metafields.judgeme.widget }}
  </div>
  <!-- End of Judge.me code -->
</div>







