<svg class="svg-bar" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5" />
</svg>

<style>

.svg-bar{
  width: 30px;
  cursor: pointer;
  color: #3F000F;
}
.scrolled .svg-bar{
  color: #fff;
}
@media screen and (max-width: 450px) {
  .svg-bar{
  width: 20px;
  
}
      
   }
</style>

<script>
    document.addEventListener('scroll', () => {
    const header = document.querySelector(".svg-bar")
    if (window.scrollY > 0) {
      header.classList.add("scrolled");
    }else{
      header.classList.remove("scrolled");
    }
  })
</script>