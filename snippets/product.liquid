<div class="main-pro">
    <a href="{{ product.url }}">
        <img src="{{ product.featured_image | img_url: "medium" }}" alt="{{ product.featured_image.alt }}">
    </a>
    <span>{{ product.vendor }}</span>
    <a class="pro-title" href="{{ product.url }}">{{ product.title }}</a>
    
    <!-- Judge.me code -->
    <div class='jdgm-widget jdgm-preview-badge' data-id='{{ product.id }}'>
        {{ product.metafields.judgeme.badge }}
    </div>
    
    <p>{{ product.price | money }}</p>
    
    <div class="addtocart">
        <button 
            type="button" 
            name="add" 
            data-id="{{ product.selected_or_first_available_variant.id }}" 
            data-quantity="1" 
            {% if product.selected_or_first_available_variant == false %} disabled {% endif %}
            class="hover-add-to-cart">
            
            {% if product.selected_or_first_available_variant.available == false %}
                Sold Out
            {% else %}
                Add To Cart
            {% endif %}
        </button>
    </div>
</div>


